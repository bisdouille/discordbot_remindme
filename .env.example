# Token de votre bot Discord
# Obtenez-le sur https://discord.com/developers/applications
DISCORD_TOKEN=votre_token_ici

# ID de votre application Discord (Client ID)
CLIENT_ID=votre_client_id_ici

# Intégration Trello (optionnel)
# Pour obtenir vos clés Trello : https://trello.com/app-key
TRELLO_API_KEY=votre_api_key_trello
TRELLO_TOKEN=votre_token_trello
# ID du tableau Trello à synchroniser (optionnel)
TRELLO_BOARD_ID=votre_board_id

# Configuration webhook (pour sync automatique Trello)
# Port du serveur webhook (défaut: 3000)
WEBHOOK_PORT=3000
# URL publique du webhook (ex: https://abc123.ngrok.io ou votre domaine)
WEBHOOK_URL=https://votre-url-ngrok.ngrok.io
# ID utilisateur Discord qui recevra les rappels auto depuis Trello
TRELLO_USER_ID=votre_discord_user_id
